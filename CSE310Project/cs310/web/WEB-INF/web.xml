<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>userSignUpServlet</servlet-name>
        <servlet-class>server.userSignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signinServlet</servlet-name>
        <servlet-class>server.signinServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperationServlet</servlet-name>
        <servlet-class>server.OperationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>server.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServletTrainer</servlet-name>
        <servlet-class>server.ChatServletTrainer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userSignUpServlet</servlet-name>
        <url-pattern>/userSignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signinServlet</servlet-name>
        <url-pattern>/signinServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperationServlet</servlet-name>
        <url-pattern>/OperationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/ChatServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServletTrainer</servlet-name>
        <url-pattern>/ChatServletTrainer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
